{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./typings.d.ts"],
    "paths": {
      "@config/*": ["src/config/*"],
      "@validators/*": ["src/validators/*"],
      "@guard/*": ["src/guard/*"],
      "@entity/*": ["src/entity/*"]
    }
  }
}
